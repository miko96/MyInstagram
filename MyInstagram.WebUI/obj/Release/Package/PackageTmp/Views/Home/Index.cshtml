@using System.Web;
@using Microsoft.AspNet.Identity;
@model MyInstagram.Data.Entities.ApplicationUser
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <img class="img-responsive img-circle" style="margin:0 auto" src="http://placehold.it/256x256" alt="">
            <h1>
                @Model.UserProfile.FirstName @Model.UserProfile.LastName  
                @if (User.Identity.IsAuthenticated)
                {
                    if (Model.Id == User.Identity.GetUserId())
                    {
                        @Html.ActionLink("Edit Profile", "Edit", "UserProfiles", new { id = User.Identity.GetUserId() }, new { @class = "btn btn-primary" });
                    }
                    else
                    {
                        @Html.ActionLink("Follow", "FollowToUser", "Account", new { userId = Model.Id }, new { @class = "btn btn-primary" });
                        //<a class="btn btn-primary" href="#" role="button">Follow</a>
                    }

                }
            </h1>
            
            <ul class="list-inline">
                <li>ПУБЛИКАЦИИ</li>
                <li>ПОДПИЩИКИ</li>
                <li>ПОДПИСКИ</li>
            </ul>
            <hr />
        </div>
    </div>
    
    <div class="row">
        @Html.Action("Photos", "Articles", new { userId = Model.Id })
        <div id="content"></div>
        <div class="col-md-4">
            <div class="thumbnail">
                <img class="img-responsive img" src="http://placehold.it/400x300" alt="">
            </div>
        </div>
        <div class="col-md-4">
            <div class="thumbnail">
                <img class="img-responsive" src="http://placehold.it/400x300" alt="">
            </div>
        </div>
        <div class="col-md-4">
            <div class="thumbnail">
                <img class="img-responsive" src="http://placehold.it/400x300" alt="">
            </div>
        </div>
        <div class="col-md-4">
            <div class="thumbnail">
                <img class="img-responsive" src="http://placehold.it/400x300" alt="">
            </div>
        </div>
    </div>
</div>